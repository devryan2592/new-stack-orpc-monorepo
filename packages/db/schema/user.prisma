model User {
  id            String       @id
  name          String
  email         String
  emailVerified Boolean      @default(false)
  image         String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @default(now()) @updatedAt
  sessions      Session[]
  accounts      Account[]
  userProfile   UserProfile?
  userRoles     UserRole[]
  galleryFolders GalleryFolder[]
  galleryFiles   GalleryFile[]
  files          File[]

  @@unique([email])
  @@map("user")
}
